# Tree implementation using lsd
#
tree() {
    local args=()
    local depth=""

    while [[ $# -gt 0 ]]; do
        case "$1" in
            -L*)
                # Handle both -L2 and -L 2 syntax
                if [[ ${#1} -gt 2 ]]; then
                    depth="${1#?L}"
                else
                    shift
                    depth="$1"
                fi
                args+=("--depth" "$depth")
                ;;
            *)
                args+=("$1")
                ;;
        esac
        shift
    done

    lsd --tree "${args[@]}"
}

